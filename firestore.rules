rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection - users can read/write their own profile
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // Group training sessions - anyone authenticated can read/write
    // (sessions have short TTL and are cleaned up automatically)
    match /group_training_sessions/{sessionId} {
      // Anyone authenticated can read sessions (needed to join by code)
      allow read: if isAuthenticated();

      // Anyone authenticated can create sessions
      allow create: if isAuthenticated()
        && request.resource.data.creatorId is string
        && request.resource.data.code is string
        && request.resource.data.participants is list
        && request.resource.data.status is string;

      // Only participants can update the session
      allow update: if isAuthenticated()
        && (
          // User is creator
          resource.data.creatorId == request.auth.uid
          // Or user is in participants list
          || resource.data.participants.hasAny([request.auth.uid])
        );

      // Only creator can delete
      allow delete: if isAuthenticated()
        && resource.data.creatorId == request.auth.uid;
    }

    // Workout history - users can read/write their own workouts
    match /workout_history/{workoutId} {
      allow read: if isAuthenticated()
        && resource.data.userId == request.auth.uid;

      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid;

      allow update, delete: if isAuthenticated()
        && resource.data.userId == request.auth.uid;
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
